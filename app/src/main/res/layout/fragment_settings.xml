<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/useTouchIDSwitch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/lblProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="37dp"
            android:text="@string/text_profile"
            android:textColor="?attr/textFillColor"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblAccountDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="25dp"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="10dp"
            android:text="@string/text_account_details"
            android:textColor="?attr/textFillColor"
            android:textSize="16sp"
            app:drawableTint="?attr/colorOnPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblProfile" />

        <View
            android:id="@+id/view"
            style="@style/Divider"
            android:layout_height="1dp"
            android:layout_marginVertical="55dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupLanguages" />

        <TextView
            android:id="@+id/lblChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:text="@string/text_change_password"
            android:textColor="?attr/textFillColor"
            android:textSize="16sp"
            app:drawableTint="?attr/colorOnPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblSecurity" />

        <TextView
            android:id="@+id/lblUseTouchID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="32dp"
            android:drawableLeft="@drawable/ic_touch_id"
            android:drawablePadding="10dp"
            android:text="@string/text_touch_id"
            android:textColor="?attr/textFillColor"
            android:textSize="16sp"
            app:drawableTint="?attr/colorOnPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblChangePassword" />

        <TextView
            android:id="@+id/lbUseDarkTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="14dp"
            android:drawableLeft="@drawable/ic_dark_theme"
            android:drawablePadding="10dp"
            android:text="@string/text_use_theme"
            android:textColor="?attr/textFillColor"
            android:textSize="16sp"
            app:drawableTint="?attr/colorOnPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTheme" />

        <TextView
            android:id="@+id/lblTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:text="@string/text_theme"
            android:textColor="?attr/textFillColor"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <Switch
            android:id="@+id/switchTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="47dp"
            android:background="@drawable/switch_background"
            android:text=""
            android:thumbTint="?attr/backgroundColor"
            android:trackTint="?attr/textFillColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <TextView
            android:id="@+id/lblLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="297dp"
            android:text="@string/text_lang"
            android:textColor="?attr/textFillColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <View
            android:id="@+id/view2"
            style="@style/Divider"
            android:layout_marginVertical="40dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblUseTouchID"></View>

        <TextView
            android:id="@+id/lblSecurity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:text="@string/text_security"
            android:textColor="?attr/textFillColor"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <ImageButton
            android:id="@+id/btnAccountDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="47dp"
            android:background="@drawable/settingsbuttonlayout"
            android:src="@drawable/ic_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="?attr/colorOnPrimary" />

        <ImageButton
            android:id="@+id/btnSetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="47dp"
            android:background="@drawable/settingsbuttonlayout"
            android:src="@drawable/ic_right"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:tint="?attr/colorOnPrimary" />

        <RadioGroup
            android:id="@+id/radioGroupLanguages"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblLanguage">

            <RadioButton
                android:id="@+id/rbtnAfrikaans"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:contentDescription=""
                android:text="@string/text_afr"
                android:textAlignment="viewStart"
                android:textColor="?attr/textFillColor" />

            <RadioButton
                android:id="@+id/rbtnEnglish"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:contentDescription=""
                android:text="@string/text_eng"
                android:textColor="?attr/textFillColor" />
        </RadioGroup>

        <Switch
            android:id="@+id/switchTouchID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="47dp"
            android:background="@drawable/switch_background"
            android:text=""
            android:thumbTint="?attr/backgroundColor"
            android:trackTint="?attr/textFillColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSetPassword" />

        <View
            android:id="@+id/view3"
            style="@style/Divider"
            android:layout_marginVertical="50dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAccountDetails"></View>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".Fragments.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="308dp"
                android:layout_marginBottom="24dp"
                android:text="@string/text_profile"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/lblAccountDetails"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/lblAccountDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="97dp"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:text="@string/text_account_details"
                android:textColor="?attr/textFillColor"
                android:textSize="16sp"
                app:drawableTint="?attr/colorOnPrimary"
                app:layout_constraintEnd_toStartOf="@+id/btnAccountDetails"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblProfile" />

            <View
                android:id="@+id/view"
                style="@style/Divider"
                android:layout_marginTop="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnAccountDetails"></View>

            <TextView
                android:id="@+id/lblChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="79dp"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:text="@string/text_change_password"
                android:textColor="?attr/textFillColor"
                android:textSize="16sp"
                app:drawableTint="?attr/colorOnPrimary"
                app:layout_constraintEnd_toStartOf="@+id/btnSetPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblSecurity" />

            <TextView
                android:id="@+id/lblUseTouchID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="119dp"
                android:drawableLeft="@drawable/ic_touch_id"
                android:drawablePadding="10dp"
                android:text="@string/text_touch_id"
                android:textColor="?attr/textFillColor"
                android:textSize="16sp"
                app:drawableTint="?attr/colorOnPrimary"
                app:layout_constraintEnd_toStartOf="@+id/useTouchIDSwitch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblChangePassword" />

            <TextView
                android:id="@+id/lblChangeFingerprintID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="58dp"
                android:drawableLeft="@drawable/ic_fingerprint"
                android:drawablePadding="10dp"
                android:text="@string/text_change_id"
                android:textColor="?attr/textFillColor"
                android:textSize="16sp"
                app:drawableTint="?attr/colorOnPrimary"
                app:layout_constraintEnd_toStartOf="@+id/btnSetFingerprint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblUseTouchID" />

            <TextView
                android:id="@+id/lbUseDarkTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="96dp"
                android:layout_marginBottom="7dp"
                android:drawableLeft="@drawable/ic_dark_theme"
                android:drawablePadding="10dp"
                android:text="@string/text_use_theme"
                android:textColor="?attr/textFillColor"
                android:textSize="16sp"
                app:drawableTint="?attr/colorOnPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/switch1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblTheme" />

            <TextView
                android:id="@+id/lblTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="304dp"
                android:text="@string/text_theme"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/switch_background"
                android:text=""
                android:textOn="On"
                android:thumbTint="?attr/android:navigationBarColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view3"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/lblAfrikaans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="160dp"
                android:text="@string/text_afr"
                android:textColor="?attr/textFillColor"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/radioGroupLanguages"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblLanguage" />

            <TextView
                android:id="@+id/lblEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="176dp"
                android:text="@string/text_eng"
                android:textColor="?attr/textFillColor"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/radioGroupLanguages"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblAfrikaans" />

            <TextView
                android:id="@+id/lblLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="277dp"
                android:layout_marginBottom="22dp"
                android:text="@string/text_lang"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/lblAfrikaans"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <View
                android:id="@+id/view2"
                style="@style/Divider"
                android:layout_marginTop="19dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupLanguages"></View>

            <View
                android:id="@+id/view3"
                style="@style/Divider"
                android:layout_marginTop="27dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSetFingerprint"></View>

            <TextView
                android:id="@+id/lblSecurity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="294dp"
                android:text="@string/text_security"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <Switch
                android:id="@+id/useTouchIDSwitch"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/switch_background"
                android:text=""
                android:thumbTint="?attr/android:navigationBarColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSetPassword" />

            <ImageButton
                android:id="@+id/btnAccountDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="59dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/settingsbuttonlayout"
                android:src="@drawable/ic_right"
                app:drawableTint="?attr/colorOnPrimary"
                app:layout_constraintBottom_toTopOf="@+id/view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnSetFingerprint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/settingsbuttonlayout"
                android:src="@drawable/ic_right"
                app:drawableTint="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/useTouchIDSwitch" />

            <ImageButton
                android:id="@+id/btnSetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="51dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/settingsbuttonlayout"
                android:src="@drawable/ic_right"
                app:drawableTint="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

            <RadioGroup
                android:id="@+id/radioGroupLanguages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="53dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="19dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view">

                <RadioButton
                    android:id="@+id/rbtnAfrikaans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <RadioButton
                    android:id="@+id/rbtnEnglish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="305dp"
                    tools:layout_editor_absoluteY="226dp"
                    />
            </RadioGroup>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>